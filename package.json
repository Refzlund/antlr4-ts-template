{
	"name": "sourcemod-plus",
	"version": "1.0.0",
	"description": "A transpiler that moderneizes sourcemod plugin scripting",
	"main": "index.js",
	"scripts": {
		"node": "ts-node ./src/index.ts",
		"dev": "nodemon ./src/index.ts",
		"gen": "ts-node ./src/index.ts -g",
		"grun": "java org.antlr.v4.gui.TestRig",
		"antlr4": "java org.antlr.v4.Tool",
		"antlr4ts": "antlr4ts"
	},
	"author": "",
	"license": "ISC",
	"dependencies": {
		"antlr4": "^4.11.0",
		"antlr4ts": "0.5.0-alpha.4",
		"chokidar": "^3.5.3"
	},
	"devDependencies": {
		"@types/antlr4": "^4.7.3",
		"@types/node": "^18.11.0",
		"antlr4ts-cli": "0.5.0-alpha.4",
		"nodemon": "^2.0.20",
		"typescript": "^4.8.4"
	},
	"type": "module",
	"nodemonConfig": {
		"ext": "ts, js, interp, tokens",
		"delay": 100,
		"events": {
			"start": "cls"
		}
	}
}
